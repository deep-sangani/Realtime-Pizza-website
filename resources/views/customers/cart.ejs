<section class="cart ">
 <div class="order container mx-auto md:w-1/2 py-12">
     <div class="flex items-center border-b border-gray-300 pb-4" > 
         <img src="/img/cart-black.png" alt="">
         <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
     </div>
     <div class="pizza-list pb-12">


<% if(session.cart){  %> 


<%for(let pizza of Object.values(session.cart.items)) {%>

        <div class="flex items-center mt-8">
            <img class="w-24" src="img/<%= pizza.item.image%>" alt="">
            <div class="ml-4 flex-1">
                <h1><%= pizza.item.name%></h1>
                <span><%= pizza.item.size%></span>
            </div>
            
                  <span class="flex-1"><%= pizza.qty%></span>
                  <span class="font-bold text-lg">‚Çπ<%= pizza.item.price * pizza.qty %></span>
        </div>

<%}%>
       
     </div>
     <hr>
     <div class="text-right py-4">
         <div>
             <span class="text-lg font-bold">Total Amount:</span>
             <span class="amount text-2xl font-bold pl-2">‚Çπ <%= session.cart.totalPrice%></span>
         </div>

<% if(user) {%> 

         <div>
             <form id="payment-form" class="mt-12" action="/order" method="POST">
                <div class="relative w-1/2 ml-auto mb-4">
                    <select id="payment-type" name="paymentType" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded leading-tight focus:outline-none focus:shadow-outline">
                      <option value="cod">Cash on delivery</option>
                      <option value="card">Pay with card</option>
                      
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                      <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                    </div>
                  </div>
                 <input class="border border-gray-400 p-2 w-1/2 my-4" placeholder="Phone number" type="text" name="phoneno">
                 <input class="border border-gray-400 p-2 w-1/2" placeholder="Address" type="text" name="address">
                 <div>
                     <div class="ml-auto w-1/2 mt-4" id="card-element"></div>
                    <button class="btn-primary py-2 px-6 rounded-full text-white font-bold mt-4"  type="submit">Order Now</button>

                 </div>
                </form>
         </div>
        <% }else{ %> 
         <a class="inline-block cursor-pointer btn-primary py-2 px-6 rounded-full text-white font-bold mt-4" href="/login">Login to Continue</a>
        <% } %> 
        </div>
 </div>
<% }else{ %> 





    <div class="empty-cart py-16 ">
        <div class="container mx-auto text-center" >
            <h1 class="text-3xl font-bold mb-2">Cart Empty üòÅ</h1>
            <p class="text-gray-500 text-lg mb-12">you probably haven't ordered a pizza yet</br>
                To order a pizza.go to nain page.
            </p>
            <img class="w-2/5 mx-auto " src="/img/empty-cart.png" alt="">
            <a class="inline-block px-6 py-2 rounded-full btn-primary text-whhite font-bold mt-12" href="/">Go Back</a>
            </div>
    </div>
<% } %> 
</section>